<form {{action "reset" on="submit"}} class="g-reset-password">
  <h1>Change Password</h1>
  {{reg/support/g-reg-notify type=notifyType msg=notifyMsg}}
  <div class="input-group g-reg-nao-input">
    <span class="input input--nao input--password">
      {{input value=password type=(if passwordVisible "text" "password") name="password" class="input__field input__field--nao"}}
      <label class="input__label input__label--nao">
        <span class="input__label-content input__label-content--nao">New Password</span>
      </label>
      <svg class="graphic graphic--nao" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
        <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"/>
      </svg>
      <a class={{revealClass}} href="" {{action (toggle "passwordVisible")}}></a>
    </span>
  </div>
  <div>
    <button type="submit" disabled={{isNotFilled}}>{{if passwordReset "Continue" "Submit"}}</button>
  </div>
</form>
