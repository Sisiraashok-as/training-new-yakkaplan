<form {{action "remind" on="submit"}} class="g-forgot">
  <h1>Forgot Password</h1>
  {{reg/support/g-reg-notify type=notifyType msg=notifyMsg}}

  <div class="input-group g-reg-nao-input">
    <span class="input input--nao">
      {{input value=identification type="text" name="email" class="input__field input__field--nao" disabled=emailSent}}
      <label class="input__label input__label--nao">
        <span class="input__label-content input__label-content--nao">Email</span>
      </label>
      <svg class="graphic graphic--nao" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
        <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"/>
      </svg>
    </span>
  </div>
  <div>
    <button type="submit" disabled={{isNotFilled}}>{{if emailSent "Continue" "Submit"}}</button>
  </div>
  <div class="notamember">
    We will send you a password resetter email.
    <p>Return to {{#link-to 'reg.login' href=true}}Login{{/link-to}} or {{#link-to 'reg.register' href=true}}Register{{/link-to}}</p>
  </div>
</form>
