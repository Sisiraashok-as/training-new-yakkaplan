 <form {{action "save" on="submit"}} class="initial-form-margin" autocomplete="off">
            <div class="col-lg-12 input input--nao" style="margin: 4% 5%;">
            <label class="initial-addprojectlabel">PROJECT NAME</label>
            </div>
          <br>
<div class="col-lg-12  input input--nao" style="margin: -4% 0%; margin-left: 57px;">
{{input value=title  type="text" name="title" class="initial-input-field-width-height" placeholder="Company Ltd."  }}
</div>


    <div >
<div class="cards" style="margin-left: 5%;">
{{#each Category as |projects|}}
  <div class="card">
   <span  style="background-image: url({{projects.image.url}}); height:210px; width: 300px; background-size: cover; background-repeat: no-repeat;display: block;"></span>
    <div class="card-title">
      <div class="col-lg-8"> 
      <label for={{projects.id}}>
         {{projects.name}}
     </label>
      </div>
      <div class="col-lg-4">
          <div class="checkbox">
 <label>
        {{input id=projects.id type="radio" name='check-1'  required="true"}}<span class="checkbox-material"><span class="check"></span></span>
</label>
</div>
      </div>
    </div>
  </div>
   {{/each}}
</div>
</div>


            <span> 
               <button class="primary" type="submit"style="display: inline-block;"  {{action 'showadcategorymodal'}}>Add Category</button>


             <button class="primary button-cancel" type="reset" style="margin-left:38%;"  {{action (toggle "active")}}>Cancel</button>
                <button class="primary" type="submit" disabled={{isNotFilled}} style="display: inline-block; margin-top: 30px;">Create</button></span>
        </form>
