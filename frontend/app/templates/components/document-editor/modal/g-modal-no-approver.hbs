<div class="modal-overlay {{if active 'active' ''}} g-modal-no-approver">
	<div class="modal">
		<a class="close ico_close-mo" href="" {{action (toggle "active")}}></a>
		<div class="g-people-modal">
			<div class="dialog-title">Issue for Approval</div>
			<div class="dialog-tagline">You haven't specified an approver yet.</div>
			<div class="dialog-tagline empty">
				<img src="images/profile/default.png">
			</div>
			<div class="dialog-tagline action">
				<span class="action" {{action 'approve'}}>Mark as Approved</span>
			</div>
			<div class="separator"> - OR - </div>
			<button class="primary" type="submit" {{action 'selectApprover'}}>Choose from Collaborators</button>
		</div>
	</div>
</div>